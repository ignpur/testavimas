<Window x:Class="Client.LobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="LobbyWindow" Height="300" Width="400">
    <Grid>
        <ListBox x:Name="GameList" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="300" Margin="10,10,0,0"></ListBox>
        <Button x:Name="JoinButton" Content="Join Game" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30" Margin="10,0,0,10" Click="JoinButton_Click"/>
        <Button x:Name="CreateGameButton" Content="Create Game" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="30" Margin="0,0,10,10" Click="CreateGameButton_Click"/>
    </Grid>
</Window>
